{
  "name": "react-webpack-configuration",
  "version": "1.0.0",
  "private": true,
  "author": "AlexEvs",
  "description": "Example of custom configuration of React + Webpack",
  "repository": {
    "url": "https://github.com/a1exevs/react-webpack-configuration"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack --mode development",
    "prebuild": "npm install --production",
    "build": "cross-env NODE_ENV=production webpack --mode production",
    "watch": "cross-env NODE_ENV=development webpack --mode development --watch",
    "start": "cross-env NODE_ENV=development webpack-dev-server --mode development --open",
    "stats": "webpack --json > stats.json && webpack-bundle-analyzer stats.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "format": "prettier --write \"src/**/*.(ts|tsx)\"",
    "lint": "eslint \"src/**/*.tsx\"",
    "lint:fix": "eslint \"src,test/**/*.tsx\" --fix"
  },
  "dependencies": {
    "@babel/core": "7.20.12",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/plugin-proposal-private-methods": "7.18.6",
    "@babel/plugin-proposal-private-property-in-object": "7.20.5",
    "@babel/plugin-transform-modules-commonjs": "7.20.11",
    "@babel/polyfill": "7.12.1",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-react": "7.18.6",
    "@babel/preset-typescript": "7.18.6",
    "@types/node": "18.11.18",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "babel-core": "6.26.3",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.3.0",
    "babel-plugin-styled-components": "2.0.7",
    "clean-webpack-plugin": "4.0.0",
    "copy-webpack-plugin": "11.0.0",
    "cross-env": "7.0.3",
    "css-loader": "6.7.3",
    "css-minimizer-webpack-plugin": "4.2.2",
    "csv-loader": "3.0.5",
    "dotenv-cmd-webpack": "2.1.0",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.5.0",
    "identity-obj-proxy": "3.0.0",
    "less-loader": "11.1.0",
    "mini-css-extract-plugin": "2.7.2",
    "path": "0.12.7",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sass-loader": "13.2.0",
    "source-map-loader": "4.0.1",
    "style-loader": "3.3.1",
    "terser-webpack-plugin": "5.3.6",
    "ts-loader": "9.4.2",
    "ts-node": "10.9.1",
    "typescript": "4.9.4",
    "web-vitals": "3.1.1",
    "webpack": "5.75.0",
    "webpack-bundle-analyzer": "4.7.0",
    "webpack-cli": "5.0.1",
    "webpack-dev-server": "4.11.1",
    "xml-loader": "1.2.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@typescript-eslint/eslint-plugin": "5.48.2",
    "@typescript-eslint/parser": "5.48.2",
    "babel-jest": "29.3.1",
    "eslint": "8.32.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.6.0",
    "eslint-config-react-app": "7.0.1",
    "eslint-config-standard": "17.0.0",
    "eslint-import-resolver-webpack": "0.13.2",
    "eslint-plugin-babel": "5.3.1",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsx": "0.1.0",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.32.1",
    "eslint-webpack-plugin": "3.2.0",
    "jest": "29.3.1",
    "jest-environment-jsdom": "29.3.1",
    "jest-runtime": "29.3.1",
    "prettier": "2.8.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "rootDir": "./",
    "modulePaths": [
      "<rootDir>/src"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "setupFiles": [],
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>./config/jest/FileStub.js",
      "\\.(css|sass|less)$": "identity-obj-proxy"
    },
    "coverageDirectory": "./.coverage",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "__fixtures__",
      "__fixtureWrappers__",
      "querycomponents",
      "index.tsx"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  }
}
